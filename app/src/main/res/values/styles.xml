<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.SteamRemaked.FormEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/cinza_hint</item>
        <item name="android:background">@drawable/edittext_main</item>
        <item name="android:textCursorDrawable">@drawable/cursor_style</item>

    </style>

    <style name="Theme.SteamRemaked.FormTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
    </style>

    <style name="Theme.SteamRemaked.FormTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.SteamRemaked.FormTextView.Titulo">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.SteamRemaked.FormButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/btn_selector</item>
        <item name="android:textColor">@color/preto_azul_escuro</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginStart">70dp</item>
        <item name="android:layout_marginEnd">70dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="Theme.SteamRemaked.LinkButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/azul_habilitado</item>
    </style>

</resources>